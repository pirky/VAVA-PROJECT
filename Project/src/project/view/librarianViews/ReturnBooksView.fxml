<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="700.0" maxWidth="1300.0" minHeight="700.0" minWidth="1300.0" prefHeight="700.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controller.librarianControllers.ReturnBooksController">
   <children>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#showMenu" text="Späť" />
      <Button fx:id="returnBtn" layoutX="144.0" layoutY="605.0" mnemonicParsing="false" onAction="#returnBook" prefHeight="31.0" prefWidth="138.0" text="Vrátiť knihu" />
      <ComboBox fx:id="readersBox" layoutX="68.0" layoutY="124.0" onAction="#updateTableView" prefHeight="31.0" prefWidth="289.0" />
      <Label layoutX="68.0" layoutY="96.0" text="Vyber čítateľa:" />
      <TableView fx:id="tableView" layoutX="473.0" layoutY="30.0" onMouseReleased="#showDates" prefHeight="626.0" prefWidth="800.0">
         <columns>
            <TableColumn fx:id="imageColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" resizable="false" text="Titulná fotka" />
            <TableColumn fx:id="authorColumn" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" resizable="false" text="Autor" />
            <TableColumn fx:id="titleColumn" maxWidth="280.0" minWidth="280.0" prefWidth="280.0" resizable="false" text="Názov knihy" />
         </columns>
      </TableView>
      <DatePicker fx:id="datePicker" layoutX="69.0" layoutY="235.0" onAction="#showExtendBtn" prefHeight="31.0" prefWidth="289.0" />
      <Button fx:id="extendBtn" layoutX="144.0" layoutY="549.0" mnemonicParsing="false" onAction="#extendBook" text="Predĺžiť požičanie" />
   </children>
</AnchorPane>
